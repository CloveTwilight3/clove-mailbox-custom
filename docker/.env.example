# Docker Environment Configuration
# Copy this file to .env in your project root

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=emailclient
POSTGRES_USER=emailuser
POSTGRES_PASSWORD=your-secure-db-password-here

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=your-secure-redis-password-here

# =============================================================================
# APPLICATION SECURITY
# =============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production-make-it-long-and-random
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
DEBUG=false
HOST=0.0.0.0
PORT=8000

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
VITE_API_URL=http://localhost:8000
VITE_APP_NAME=Personal Email Client
VITE_APP_VERSION=1.0.0

# =============================================================================
# EMAIL SERVER DEFAULTS (one.com)
# =============================================================================
DEFAULT_IMAP_HOST=imap.one.com
DEFAULT_IMAP_PORT=993
DEFAULT_IMAP_SSL=true
DEFAULT_POP3_HOST=pop.one.com
DEFAULT_POP3_PORT=995
DEFAULT_POP3_SSL=true
DEFAULT_SMTP_HOST=send.one.com
DEFAULT_SMTP_PORT=465
DEFAULT_SMTP_SSL=true

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=5242880

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Uncomment for development
# DEBUG=true
# VITE_API_URL=http://localhost:8000

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# For production deployment, update these values:
# VITE_API_URL=https://your-domain.com
# SECRET_KEY=generate-a-truly-random-secret-key
# POSTGRES_PASSWORD=use-a-strong-database-password
# REDIS_PASSWORD=use-a-strong-redis-password
